+	my ($url, $version, $value) = @_;
+	$value = '100-continue' unless defined $value;
+	http(<<EOF);
+POST $url HTTP/$version
+Host: localhost
+Expect: $value
+Content-Length: 0
+Connection: close
+
+EOF
+}
