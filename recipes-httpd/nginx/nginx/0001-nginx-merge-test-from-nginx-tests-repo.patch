+	($v_str) = $v_str =~ m!^([0-9.]+)!m or return 0;
+	my @v = split(/\./, $v_str);
+	my ($n, $v);
+
+	for $n (split(/\./, $need)) {
+		$v = shift @v || 0;
+		return 0 if $n > $v;
+		return 1 if $v > $n;
+	}
+
