+# delayed in limit_req, the rest of data frame is received after response
+
+$s = Test::Nginx::HTTP2->new();
+
+SKIP: {
+skip 'not enough window', 1 if $maxwin < 4;
+
+$sid = $s->new_stream({ path => '/limit_req', body => 'TEST', split => [61],
