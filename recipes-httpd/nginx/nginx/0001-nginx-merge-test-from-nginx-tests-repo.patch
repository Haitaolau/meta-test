+
+        location / {
+            resolver    127.0.0.1:%%PORT_8981_UDP%%;
+            resolver_timeout 1s;
+            proxy_pass  http://$host:%%PORT_8080%%/backend;
+
+            proxy_next_upstream http_504 timeout error;
+            proxy_intercept_errors on;
+            proxy_connect_timeout 1s;
