+        listen       127.0.0.1:8080;
+        server_name  _;
+
+        location / {
+            valid_referers server_names;
+            return 200 "$host value $invalid_referer";
+        }
+        server_name  below;
+    }
+
+    server {
+        listen       127.0.0.1:8080;
+        server_name  localhost ~bar ~^anchoredre$;
+
+        location /blocked {
+            valid_referers blocked www.example.org;
