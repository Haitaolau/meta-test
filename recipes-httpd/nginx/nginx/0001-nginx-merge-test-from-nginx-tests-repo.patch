+sub read_all {
+	my ($s) = @_;
+	my $r = '';
+	while (IO::Select->new($s)->can_read(1)) {
+		$s->sysread(my $buf, 8192) or last;
+		log_in($buf);
+		$r .= $buf;
+	}
+	return $r;
+}
