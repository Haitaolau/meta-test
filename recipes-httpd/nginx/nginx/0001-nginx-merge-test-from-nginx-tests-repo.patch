+daemon off;
+
+events {
+}
+
+http {
+    %%TEST_GLOBALS_HTTP%%
+
+    server {
+        listen       127.0.0.1:8080;
+        server_name  localhost;
+
+        proxy_buffering off;
+        proxy_http_version 1.1;
+
+        sub_filter_types *;
+
+        location /partial {
+            proxy_pass http://127.0.0.1:8081;
+            sub_filter za ZA;
+        }
+
+        location /negative {
+            proxy_pass http://127.0.0.1:8081;
+            sub_filter ab AB;
+        }
+    }
+}
+
+EOF
