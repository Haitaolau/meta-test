+# sequential requests
+
+for my $i (1 .. 5) {
+	like(http_get('/seq'), qr/request 1/, 'sequential request ' . $i);
+}
+
+# parallel requests
+
+my @sockets;
+
+for my $i (1 .. 5) {
+	$sockets[$i] = http_get('/par1', start => 1);
+}
+
+for my $i (1 .. 5) {
+	like(http_end($sockets[$i]), qr/request 1/, 'parallel request ' . $i);
+}
+
+like(http_get('/par1'), qr/request 1/, 'first request cached');
