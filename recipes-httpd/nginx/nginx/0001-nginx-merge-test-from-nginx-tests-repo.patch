+# Returns true if two arrays follow consistency, i.e., they may only differ
+# by @args present in $p, but absent in $p2, for the same indices.
+
+sub cmp_peers {
+	my ($p, $p2, @args) = @_;
+
+	for my $i (0 .. $#$p) {
+		next if @{$p}[$i] == @{$p2}[$i];
+		next if (grep $_ == @{$p}[$i], @args);
+		return 0;
+	}
+
+	return 1;
+}
