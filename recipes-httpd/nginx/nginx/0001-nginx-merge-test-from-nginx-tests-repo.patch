+# series of requests, each with unique hash key
+
+sub iter {
+	my ($uri, $count) = @_;
+	my @res;
+
+	for my $i (1 .. $count) {
+		if (http_get("$uri/?a=$i") =~ /X-Port: (\d+)/) {
+			push @res, $1 if defined $1;
+		}
+	}
+
+	return @res;
+}
