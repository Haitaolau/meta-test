+            proxy_cache   one;
+        }
+
+        location /replace/ {
+            proxy_pass    http://127.0.0.1:8081/;
+            proxy_cache   one;
+        }
+
+        location /revalidate/ {
+            proxy_pass    http://127.0.0.1:8081/;
