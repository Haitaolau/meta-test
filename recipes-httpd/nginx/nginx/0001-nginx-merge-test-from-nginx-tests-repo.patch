+like(http_get('/a/'), qr/X-Location: unset/, 'match a');
+like(http_get('/a-a'), qr/X-Location: a-a/, 'match a-a');
+like(http_get('/a-b'), qr/X-Location: a-b/, 'match a-b');
+
