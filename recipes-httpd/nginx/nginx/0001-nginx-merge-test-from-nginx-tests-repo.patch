+
+$s->send('RCPT TO:<test@example.com>');
+$s->ok('good rcpt to');
+
+# Make sure command split into many packets processed correctly
+
+$s = Test::Nginx::SMTP->new();
+$s->read();
+
+$s->print('HEL');
+$s->send('O example.com');
+$s->ok('split command');
+
