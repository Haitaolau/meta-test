+#!/usr/bin/perl
+
+# (C) Maxim Dounin
+
+# Tests for location selection, an auto_redirect edge case.
+
+###############################################################################
+
+use warnings;
+use strict;
+
+use Test::More;
+
+BEGIN { use FindBin; chdir($FindBin::Bin); }
+
+use lib 'lib';
+use Test::Nginx;
