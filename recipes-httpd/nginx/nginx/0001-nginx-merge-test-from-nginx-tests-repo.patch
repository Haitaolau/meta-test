+#!/usr/bin/perl
+
+# (C) Maxim Dounin
+
+# Tests for http proxy cache revalidation with conditional requests.
+
+###############################################################################
+
+use warnings;
+use strict;
+
+use Test::More;
+
+BEGIN { use FindBin; chdir($FindBin::Bin); }
+
